<h1>List of Friends</h1>

<table class="mt3 fit">
    <thead class="p1 h2">
        <tr class="white bg-blue">
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody class="p1 h3">
        {{#each model as |friend|}}
            <tr>
                <td class="border-bottom">
                    {{link-to friend.fullName "friends.show" friend}}
                </td>
                <td class="border-bottom">
                    {{link-to "Edit" "friends.edit" friend}}
                    <a href="#" {{action "delete" friend}}>Delete</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>