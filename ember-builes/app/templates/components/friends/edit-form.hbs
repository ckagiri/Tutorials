<form {{action "save" on="submit"}} class="px2 mx-auto borrowers-form">
    {{#if errorMessage}}
        <h3 class="white bg-red">{{errorMessage}}</h3>
    {{/if}}
    
    <p>
        <label>
            First name:
            {{input value=model.firstName}}
        </label>
    </p>

    <p>
        <label>
            Last name:
            {{input value=model.lastName}}
        </label>
    </p>

    <p>
        <label>
            Email:
            {{input value=model.email}}
        </label>
    </p>

    <p>
        <label>
            Twitter:
            {{input value=model.twitter}}
        </label>
    </p>

    <input type="submit" value="Save" class="btn h3 border white bg-green p2 mr2 col-3"/>
    <button {{action "cancel"}} class="btn h3 border white bg-gray p2 mr2 col-3">Cancel</button>
</form>