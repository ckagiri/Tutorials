<form>
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Name*</label>
        <div class="col-sm-10">
            {{input type="text" value=item.name class="form-control" placeholder="Enter library name"}}

            {{#if item.isNameValid}}
                {{fa-icon "check"}}
            {{/if}}
        </div>
    </div>

    <div class="form-group row">
        <label for="address" class="col-sm-2 col-form-label">Address</label>
        <div class="col-sm-10">
            {{input type="text" value=item.address class="form-control" placeholder="Enter library address"}}
        </div>
    </div>

    <div class="form-group row">
        <label for="phone" class="col-sm-2 col-form-label">Phone</label>
        <div class="col-sm-10">
            {{input type="text" value=item.phone class="form-control" placeholder="Enter library phone number"}}
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary" {{action "buttonClicked" item}} disabled={{unless item.isValid true}}>{{buttonLabel}}</button>
        </div>
    </div>
</form>